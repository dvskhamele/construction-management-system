
{
    "manifest_version": 3,
    "name": "Tool & Equipment Inventory Checker",
    "version": "1.0",
    "description": "Manage your construction tools and equipment inventory.",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}
