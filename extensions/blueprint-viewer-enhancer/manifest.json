
{
    "manifest_version": 3,
    "name": "Blueprint Viewer Enhancer",
    "version": "1.0",
    "description": "Add basic annotation tools to blueprints and drawings in your browser.",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}
