                    <td className="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                      {project.lastUpdate}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                      <div>{project.nextMilestone}</div>
                      <div>{project.nextMilestoneDate}</div>
