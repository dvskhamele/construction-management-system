'use client'

import React, { useState, useEffect } from 'react'
import { useRouter } from 'next/navigation'
import UserLayout from '../components/UserLayout'

export default function NotFound() {
  const [isMobile, setIsMobile] = useState(false)
  const [isLoggedIn, setIsLoggedIn] = useState(false)
  const [user, setUser] = useState<any>(null)
  const router = useRouter()

  useEffect(() => {
    // Check if user is on mobile device
    const checkIsMobile = () => {
      setIsMobile(window.innerWidth < 768)
    }
    
    checkIsMobile()
    window.addEventListener('resize', checkIsMobile)
    
    // Check if user is logged in
    const token = localStorage.getItem('token')
    if (token) {
      setIsLoggedIn(true)
      // Mock user data for prototype
      setUser({ name: 'Project Manager', role: 'ADMIN' })
    }
    
    return () => {
      window.removeEventListener('resize', checkIsMobile)
    }
  }, [])

  const handleLogout = () => {
    localStorage.removeItem('token')
    setIsLoggedIn(false)
    setUser(null)
    router.push('/login')
  }

  // Render mobile 404 page for small screens
  if (isMobile) {
    // For mobile, we'll render a simple mobile version without the UserLayout
    return (
      <div className="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 flex items-center justify-center p-4">
        <div className="bg-white p-6 rounded-2xl shadow-xl w-full max-w-sm text-center">
          <div className="mx-auto bg-rose-100 rounded-full p-3 w-16 h-16 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" className="h-8 w-8 text-rose-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h1 className="text-2xl font-bold text-slate-800">Page Not Found</h1>
          <p className="text-slate-600 mt-2">Sorry, we couldn't find the page you're looking for.</p>
          
          <div className="mt-8 space-y-3">
            <button
              className="w-full bg-teal-600 text-white py-3 px-4 rounded-lg hover:bg-teal-700 transition duration-300 shadow-md hover:shadow-lg text-sm font-medium"
              onClick={() => router.back()}
            >
              Go Back
            </button>
            
            <button
              className="block w-full bg-slate-100 text-slate-700 py-3 px-4 rounded-lg hover:bg-slate-200 transition duration-300 text-sm font-medium"
              onClick={() => router.push('/dashboard')}
            >
              Go to Dashboard
            </button>
          </div>
        </div>
      </div>
    )
  }

  // If user is logged in, render the 404 page inside the UserLayout
  if (isLoggedIn && user) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 flex items-center justify-center">
        <UserLayout user={user} onLogout={handleLogout}>
          <div className="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
            <div className="bg-white rounded-2xl shadow-md p-8 text-center">
              <h1 className="text-3xl font-bold text-slate-800 mb-4">404 - Page Not Found</h1>
              <p className="text-slate-600 mb-6">Sorry, we couldn't find the page you're looking for.</p>
              
              <div className="flex justify-center space-x-4">
                <button
                  className="bg-teal-600 text-white py-2 px-4 rounded-lg hover:bg-teal-700 transition duration-300"
                  onClick={() => router.back()}
                >
                  Go Back
                </button>
                
                <button
                  className="bg-slate-200 text-slate-700 py-2 px-4 rounded-lg hover:bg-slate-300 transition duration-300"
                  onClick={() => router.push('/dashboard')}
                >
                  Go to Dashboard
                </button>
              </div>
            </div>
          </div>
        </UserLayout>
      </div>
    )
  }

  // For non-authenticated users, render the regular 404 page
  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 flex items-center justify-center">
      <div className="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
        <div className="bg-white rounded-2xl shadow-md p-8 text-center">
          <h1 className="text-3xl font-bold text-slate-800 mb-4">404 - Page Not Found</h1>
          <p className="text-slate-600 mb-6">Sorry, we couldn't find the page you're looking for.</p>
          
          <div className="flex justify-center space-x-4">
            <button
              className="bg-teal-600 text-white py-2 px-4 rounded-lg hover:bg-teal-700 transition duration-300"
              onClick={() => router.back()}
            >
              Go Back
            </button>
            
            <button
              className="bg-slate-200 text-slate-700 py-2 px-4 rounded-lg hover:bg-slate-300 transition duration-300"
              onClick={() => router.push('/')}
            >
              Go to Home
            </button>
          </div>
        </div>
      </div>
    </div>
  )
}